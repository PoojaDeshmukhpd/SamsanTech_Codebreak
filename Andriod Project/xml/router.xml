<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="80dp"
    tools:context=".router_main">

    <TextView
        android:id="@+id/TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="16dp"
        android:text="Router Information   "
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ssidTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="125dp"
        android:text="SSID: "
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/bssidTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ssidTextView"
        android:layout_marginStart="60dp"
        android:layout_marginTop="16dp"
        android:text="BSSID: "
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/frequencyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bssidTextView"
        android:layout_marginStart="60dp"
        android:layout_marginTop="16dp"
        android:text="Frequency: "
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/rangeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Range: "
        android:textSize="20sp"
        android:layout_below="@+id/frequencyTextView"
        android:layout_marginTop="16dp"
        android:layout_marginStart="60dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/makeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make: "
        android:textSize="20sp"
        android:layout_below="@+id/rangeTextView"
        android:layout_marginTop="16dp"
        android:layout_marginStart="60dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/modelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/makeTextView"
        android:layout_marginStart="60dp"
        android:layout_marginTop="16dp"
        android:text="Model: "
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="134dp"
        android:layout_marginEnd="71dp"
        android:background="#2C000000"
        android:text="SSID"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="173dp"
        android:layout_marginEnd="70dp"
        android:background="#2C000000"
        android:text="BSSID"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="219dp"
        android:layout_marginEnd="69dp"
        android:background="#2C000000"
        android:text="Frequency Band"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="265dp"
        android:layout_marginEnd="67dp"
        android:background="#2C000000"
        android:text="Range"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="305dp"
        android:layout_marginEnd="68dp"
        android:background="#2C000000"
        android:text="Make"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="347dp"
        android:layout_marginEnd="69dp"
        android:background="#2C000000"
        android:text="Model"
        android:textAlignment="center" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="122dp"
        android:text="Keep Connection" />


</RelativeLayout>